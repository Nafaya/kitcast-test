{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "lib": [ "ES2020.Promise", "es2019" ],
    "typeRoots": ["./src/typings", "./src/global.d.ts", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "data", "test.ts"]
}
